<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('partials/header',{getProducts: getProducts,user:user})%>
   
    <div class="container-fluid mt-3">
        <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="./CarouselImage/Cola.jpg" style="object-fit: cover;" width="100%" height="300px">
              </div>
              <div class="carousel-item">
                <img src="./CarouselImage/diskon.jpg" style="object-fit: cover;" width="100%" height="300px">
              </div>
              <div class="carousel-item">
                <img src="./CarouselImage/iphone.jpg" style="object-fit: cover;" width="100%" height="300px">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          
    <div class="container-fluid mt-3 ">
        
        <div class="row d-flex p-2"> 
            <% for (let i = 0; i < getProducts.length; i++) { %>
      
                <div class="col-2 border border-secondary" style="margin: 10px; display: flex; justify-content: center;align-items: center;"> 
                <a href='<%= getProducts[i].id %>' style="text-decoration: none;color: black;"> 
                <h3><%= getProducts[i].name %></h3> 
                <img style="width: 40%;height: 40%;" src="images/<%= getProducts[i].cover %>">
                <h2>Rp <%= getProducts[i].product_stocks[0].price %></h2>
                <p><%= getProducts[i].short_description %></p> 
                <% if(getProducts[i].description.length > 50) { %>
                    <p><%= getProducts[i].description.substring(0,50) %></p>
                <% } %>
                </a>
              </div>
              <% } %>
              
              <% if(user.isAdmin) { %>
                <a href="/create" style="text-decoration: none;color: black;"> 
                <div class="col-sm-2 border border-secondary" style="display: flex; justify-content: center;align-items: center;"> 
                  <img width="100%" height="100%" src="images/plus.png">
                </div>
              </a>
              <% } %>
        </div>   
        
    </div>
    
     
</body>
</html>