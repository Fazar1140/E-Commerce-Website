<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link 
    href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css" 
    rel="stylesheet"  type='text/css'>
    <script src="https://www.paypal.com/sdk/js?client-id=<%=paypalClientId%>"></script>
    <style>
        #btn{
            display: none;
        }
    </style>
</head>
<body>
     <div>
        
        <form class="container-fluid p-5 m-5" method="POST" action="/PaymentDetail/create/<%=Cart[0].id%>">
        <h1>Payment!</h1>

        <div data-mdb-input-init class="form-outline mb-4">
            <label class="payment" for="payment" >Metode pembayaran : </label>
            <select name="payment_mode" id="payment_require" onchange="paymentMode()">
                <option value="COD">COD</option>
                <option value="UPI">UPI</option>
                <option value="CARD">CARD</option>
            </select>
             
        </div>
        
        <div data-mdb-input-init class="form-outline mb-4">
           <h2> <%=getProducts.name%> </h2>
           <div class="row">
                
                <div class="col-1">
                    <img src="../../images/<%=getProducts.cover%>" width="100px" height="100px">
                </div>
                <div class="col">
                    <p id="productId"><%=getProducts.id%></p> 
                    <h4>Harga total : <%= Cart[0].total * getProducts.product_stocks[0].price %></h4>
                    <h5>Harga satuan : <span id="price"><%= getProducts.product_stocks[0].price %></span></h5>
                    <h5>Jumlah barang : <span id="total"><%= Cart[0].total %></span></h5>
                </div>
                <div id="payment_provider">
                    <div id="COD">
                            <button type="submit" id='btn' class="btn btn-outline-primary"> submit </button>
                            <div id="paypal"></div>
                    </div>
                </div>
           </div>
        </div>

        
         
         
        </form>
    
     </div>
    
     <script>
        const price = document.getElementById('price').innerHTML
        const total = parseInt(document.getElementById('total').innerHTML);
        const provide = document.getElementById('payment_require').value;
        const getProductId = parseInt(document.getElementById('productId').innerHTML);        
        const paypalProp = document.getElementById('paypal');
        
        if(provide == 'COD'){
            btn.style.display = 'block'
            paypalProp.style.display ='none'
        }else if([provide =='UPI' || provide=='CARD']){
             paypalProp.style.display ='block'
             btn.style.display = 'none'
        }

        paypal
                    .Buttons({
                        createOrder: function () {
                        return fetch("/PaymentDetail/create-order", {
                            method: "POST",
                            headers: {
                            "Content-Type": "application/json",
                            },
                            body: JSON.stringify({
                            items: [
                                {
                                id: getProductId,
                                total: total,
                                },
                               
                            ],
                            }),
                        })
                            .then(res => {
                            if (res.ok) return res.json()
                            return res.json().then(json => Promise.reject(json))
                            })
                            .then(({ id }) => {
                            return id
                            })
                            .catch(e => {
                            console.error(e.error)
                            })
                        },
                        onApprove: function (data, actions) {
                        return actions.order.capture()
                        },
                    })
                    .render("#paypal")


        function paymentMode(){
            var provider = document.getElementById('payment_require').value 
            const inner = document.getElementById('payment_provider');
            const innerProvide = inner.getElementsByTagName('div');
            const btn = document.getElementById('btn');
            const paypalProp = document.getElementById('paypal');

            if(provider == 'UPI'){
                btn.style.display = 'none'
                paypalProp.style.display = 'block';
                innerProvide[0].id = 'UPI'
 
            }else if(provider == 'COD'){
                btn.style.display = 'block'
                paypalProp.style.display = 'none';
                innerProvide[0].id = 'COD'
            }
            else if(provider == 'CARD'){
                btn.style.display = 'none'
                paypalProp.style.display = 'block';
                innerProvide[0].id = 'CARD'
            }
             
        }

        
        
     </script>
</body>
</html>